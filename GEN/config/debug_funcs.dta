{func reload_song
   {game thread_task
      {game set_time_paused TRUE}
      {set $ms {game ms}}
      {game load_song {game get_song}}
      {$task wait {! {game loaded}}}
      {cheat_display show {sprint "Reloaded song: " {game get_song}}}
