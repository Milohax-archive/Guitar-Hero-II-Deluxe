{new Object cheat_display
   (show
      ($msg)
      {rnd show_overlay cheats TRUE}
      {rnd reflect cheats {print $msg "\n"}}
      {set [refs] {'+' [refs] 1}}
      {script_task
         (delay CHEAT_DISPLAY_S)
         (units kTaskUISeconds)
         (script
		    {set [refs] {- [refs] 1}}
            {if {== [refs] 0}
               {rnd show_overlay cheats FALSE}})})
   (show_bool
      ($label $val)
      {$this show {sprint $label ": " {if_else $val "ON" "OFF"}}}
      {set [refs] {'+' [refs] 1}}
      {script_task
         (delay CHEAT_DISPLAY_S)
         (units kTaskUISeconds)
         (script
            {set [refs] {- [refs] 1}}
            {if {== [refs] 0}
               {rnd show_overlay cheats FALSE}})})
   (refs 0)}
